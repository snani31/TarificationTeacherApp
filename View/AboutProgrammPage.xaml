<UserControl x:Class="TerificationTeacherApp.View.AboutProgrammPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TerificationTeacherApp.View"
             mc:Ignorable="d" 
             d:DesignHeight="520" d:DesignWidth="750">
    <Border
        Height="520"
        Width="750"
        BorderThickness="0"
        Background="#252930"
        CornerRadius="25">

        <ScrollViewer 
            Height="auto"
            VerticalScrollBarVisibility="Visible"
            Margin="10">

            <ScrollViewer.Resources>
                <Style TargetType="ScrollBar" BasedOn="{StaticResource ScrollBarProjectStyle}"/>
            </ScrollViewer.Resources>

            <StackPanel
                Margin="15">

                <TextBlock 
                    Margin="10"
                    Text="О программе" 
                           Style="{StaticResource SpanDefoult}" 
                           FontSize="30" 
                           FontWeight="DemiBold"/>

                <Grid d:Name="AboutProgrammSection" 
                      >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="270"/>
                    </Grid.ColumnDefinitions>

                    <Border
                        BorderThickness="2"
                        BorderBrush="#576378"
                        Margin="20 0"
                        Padding="10"
                        Background="#3c4452"
                        Grid.Column="0"
                        MinHeight="250"
                        CornerRadius="20"
                        >
                        <TextBlock 
                           TextAlignment="Justify"
                           TextWrapping="Wrap"
                           Text= "{Binding AboutProgrammText}" 
                           Style="{StaticResource SpanDefoult}"
                           FontSize="19"/>

                    </Border>

                    <Border
                        BorderThickness="2"
                        BorderBrush="#576378"
                        Margin="20 0"
                        Padding="10"
                        Background="#3c4452"
                        Grid.Column="1"
                        CornerRadius="20"
                        >
                        <StackPanel>
                            <Border d:Name ="ImageBorder"
                                    Height="130"
                                    Width="auto"
                                    CornerRadius="40"
                                    BorderThickness="2"
                                    BorderBrush="#576378">
                                <Border.Background>
                                    <ImageBrush ImageSource="\Styles\Pictures\Razrab).jpg"/>
                                </Border.Background>
                            </Border>
                            <TextBlock TextAlignment="Center">
                                <Hyperlink Command="{Binding RazrabHyperlink}" FontSize="16">Контакт</Hyperlink>
                            </TextBlock>
                            <TextBlock 
                                TextAlignment="Center"
                                TextWrapping="Wrap"
                                Text= "{Binding ProgrammerInfoText}" 
                                Style="{StaticResource SpanDefoult}"
                                FontSize="14"/>
                        </StackPanel>
                    </Border>



                </Grid>

                <Grid d:Name="AboutNavigationSection">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock 
                    Margin="10"
                    Text="Навигация" 
                    Style="{StaticResource SpanDefoult}" 
                    FontSize="30" 
                    FontWeight="DemiBold"/>

                    <TextBlock 
                        Margin="10"
                        Grid.Row="1"
                        Grid.Column="0"
                        TextAlignment="Left"
                        TextWrapping="Wrap"
                        Text= "{Binding AuthorizationAboutNavText}" 
                        Style="{StaticResource SpanDefoult}"
                        FontSize="19"/>
                    <Border
                        Margin="10"
                        VerticalAlignment="Top"
                        Grid.Row="1"
                        Grid.Column="1"
                        Height="150"
                        Width="auto"
                        CornerRadius="40"
                        BorderThickness="2"
                        BorderBrush="#576378">
                        <Border.Background>
                            <ImageBrush ImageSource="\Styles\Pictures\AuthorizationPicture.jpg"/>
                        </Border.Background>
                    </Border>

                    <TextBlock 
                        Margin="10"
                        Grid.Row="2"
                        Grid.Column="0"
                        TextAlignment="Left"
                        TextWrapping="Wrap"
                        Text= "{Binding TarificationAboutNavText}" 
                        Style="{StaticResource SpanDefoult}"
                        FontSize="19"/>
                    <Border
                        Margin="10"
                        VerticalAlignment="Top"
                        Grid.Row="2"
                        Grid.Column="1"
                        Height="150"
                        Width="auto"
                        CornerRadius="40"
                        BorderThickness="2"
                        BorderBrush="#576378">
                        <Border.Background>
                            <ImageBrush ImageSource="\Styles\Pictures\TarifucationPicture.jpg"/>
                        </Border.Background>
                    </Border>

                    <TextBlock 
                        Margin="10"
                        Grid.Row="3"
                        Grid.Column="0"
                        TextAlignment="Left"
                        TextWrapping="Wrap"
                        Text= "{Binding StudentsPageAboutNavText}" 
                        Style="{StaticResource SpanDefoult}"
                        FontSize="19"/>
                    <Border
                        Margin="10"
                        VerticalAlignment="Top"
                        Grid.Row="3"
                        Grid.Column="1"
                        Height="150"
                        Width="auto"
                        CornerRadius="40"
                        BorderThickness="2"
                        BorderBrush="#576378">
                        <Border.Background>
                            <ImageBrush ImageSource="\Styles\Pictures\StudentsPicture.jpg"/>
                        </Border.Background>
                    </Border>

                    <TextBlock 
                        Margin="10"
                        Grid.Row="4"
                        Grid.Column="0"
                        TextAlignment="Left"
                        TextWrapping="Wrap"
                        Text= "{Binding ProgrammInfoPageAboutNavText}" 
                        Style="{StaticResource SpanDefoult}"
                        FontSize="19"/>
                    <Border
                        Margin="10"
                        VerticalAlignment="Top"
                        Grid.Row="4"
                        Grid.Column="1"
                        Height="150"
                        Width="auto"
                        CornerRadius="40"
                        BorderThickness="2"
                        BorderBrush="#576378">
                        <Border.Background>
                            <ImageBrush ImageSource="\Styles\Pictures\AbotuProgrammPicture.jpg"/>
                        </Border.Background>
                    </Border>

                </Grid>

            </StackPanel>
        </ScrollViewer>
    </Border>
</UserControl>
