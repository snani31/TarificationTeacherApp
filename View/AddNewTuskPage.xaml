<UserControl x:Class="TerificationTeacherApp.View.AddNewTuskPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TerificationTeacherApp.View"
             mc:Ignorable="d" 
             d:DesignHeight="520" d:DesignWidth="750">
    <Border
        Height="520"
        Width="750"
        BorderThickness="0"
        Background="#252930"
        CornerRadius="25">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <Button Style="{StaticResource PurpleButton}"
                    Grid.Row="0"
                    Content="Назад"
                    Width="200"
                    Height="50"
                    HorizontalAlignment="Left"
                    Margin="10 0 0 0"
                    Command="{Binding BackTusksForm}"/>
            <ComboBox Grid.Row="0"
                      HorizontalAlignment="Right"
                      Margin="15 10"
                      Style="{StaticResource ComboBoxTest2}"
                      Width="300" 
                      ItemContainerStyle="{StaticResource ComboboxItemStyle}"
                      SelectedValue="{Binding SelectedDiscipline, Mode=OneWayToSource}"
                      ItemsSource="{Binding DisciplineItems}"
                      ToolTip="{Binding RelativeSource={RelativeSource Mode=Self}, Path=SelectedValue.DisciplineName , Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" >
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <TextBlock 
                                MaxWidth="250"
                                Margin="10 0 0 0"
                                FontSize="20"
                                Style="{StaticResource SpanDefoult}"
                                FontWeight="DemiBold"
                                Text="{Binding DisciplineName}" 
                                TextWrapping="Wrap"/>
                        </Grid>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Border
                    CornerRadius="0 10 70 0"
                    Grid.Row="1"
                    Padding="1"
                    >
                <Border.Background>
                    <LinearGradientBrush>
                        <GradientStop 
                            Color="#f28a03" Offset="0.0"
                            />
                        <GradientStop 
                            Color="#02fffe" Offset="1"
                            />
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border
                        HorizontalAlignment="Left"
                        Margin="15 0 0 0"
                        Grid.Column="0"
                            CornerRadius="100"
                            Width="90"
                            Height="90"
                            BorderThickness="2"
                            BorderBrush="White"
                            Background="Black">
                        <Image
                            Width="70"
                            Height="70"
                            Source="/Styles/Icons/EmpthyUserIcon50.png"
                                    VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock
                        Style="{StaticResource SpanDefoult}"
                        FontWeight="DemiBold"
                        FontSize="20"
                        Margin="10"
                        TextAlignment="Justify"
                        TextWrapping="Wrap"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Grid.Column="1"
                        Text="{Binding StydentFIO}"/>
                </Grid>
            </Border>
            <Border
                Grid.Row="2"
                Margin="10"
                CornerRadius="25"
                BorderThickness="3"
                BorderBrush="AliceBlue"
                    >
                <ScrollViewer
                    Margin="5">
                    <ScrollViewer.Resources>
                        <Style TargetType="ScrollBar" BasedOn="{StaticResource ScrollBarProjectStyle}"/>
                    </ScrollViewer.Resources>
                    <StackPanel Grid.Column="1">
                        <Border CornerRadius="10"
                                Margin="20 5">
                            <Border.Background>
                                <LinearGradientBrush>
                                    <GradientStop 
                            Color="#f28a03" Offset="0.0"
                            />
                                    <GradientStop 
                            Color="#02fffe" Offset="1"
                            />
                                </LinearGradientBrush>
                            </Border.Background>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock
                                    Grid.Row="0"
                                    Style="{StaticResource SpanDefoult}"
                                    FontWeight="DemiBold"
                                    FontSize="20"
                                    Margin="10"
                                    TextAlignment="Justify"
                                    TextWrapping="Wrap"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Text= "Выберите тип задания"/>
                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Style="{StaticResource SpanDefoult}"
                                    FontWeight="DemiBold"
                                    FontSize="20"
                                    Margin="10"
                                    TextAlignment="Justify"
                                    TextWrapping="Wrap"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Text= "Выберите время сдачи"/>

                                <ComboBox Grid.Column="0"
                                          Grid.Row="1"
                                          HorizontalAlignment="Left"
                                          Margin="10 5"
                                          ItemContainerStyle="{StaticResource ComboboxItemStyle}"
                                          Style="{StaticResource ComboBoxGradientStyle}"
                                          ItemsSource="{Binding TuskTypeItems}"
                                          SelectedValue="{Binding TuskSelectedType, Mode=OneWayToSource}"
                                          Width="300"
                                          Height="55"
                                          ToolTip="{Binding RelativeSource={RelativeSource Mode=Self}, Path=SelectedValue , Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" >
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <TextBlock 
                                                    MaxWidth="250"
                                                    Margin="10 0 0 0"
                                                    FontSize="20"
                                                    Style="{StaticResource SpanDefoult}"
                                                    FontWeight="DemiBold"
                                                    Text="{Binding}" 
                                                    TextWrapping="Wrap"
                                                    Height="auto"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>

                                <ComboBox Grid.Row="1"
                                          Grid.Column="1"
                                          HorizontalAlignment="Left"
                                          Margin="10 5"
                                          ItemContainerStyle="{StaticResource ComboboxItemStyle}"
                                          Style="{StaticResource ComboBoxGradientStyle}"
                                          ItemsSource="{Binding SelectTimeItems}"
                                          SelectedValue="{Binding TuskSelectedTime, Mode=OneWayToSource}"
                                          Width="300"
                                          Height="55"
                                          ToolTip="{Binding RelativeSource={RelativeSource Mode=Self}, Path=SelectedValue , Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" >
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <TextBlock 
                                                    MaxWidth="250"
                                                Margin="10 0 0 0"
                                                FontSize="20"
                                                Style="{StaticResource SpanDefoult}"
                                                FontWeight="DemiBold"
                                                Text="{Binding}" 
                                                TextWrapping="Wrap"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </Grid>
                        </Border>
                        <TextBlock
                        Style="{StaticResource SpanDefoult}"
                        FontWeight="DemiBold"
                        FontSize="30"
                        Margin="10"
                        TextAlignment="Center"
                        TextWrapping="Wrap"
                        HorizontalAlignment="Center"
                        Text="{Binding DisciplineTytle}"/>
                        <TextBlock
                        Style="{StaticResource SpanDefoult}"
                        FontWeight="DemiBold"
                        FontSize="20"
                        Margin="20"
                        TextAlignment="Justify"
                        TextWrapping="Wrap"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Text= "Придумайте название"/>
                        <TextBox
                            TextWrapping="Wrap"
                            Style="{StaticResource TuskDataTextBoxStyle}"
                            Margin="20 10"
                            MinHeight="50"
                            Width="650"
                            Text="{Binding TuskTytle, Mode=OneWayToSource}"/>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                Style="{StaticResource SpanDefoult}"
                                FontWeight="DemiBold"
                                FontSize="20"
                                Margin="10"
                                TextAlignment="Justify"
                                TextWrapping="Wrap"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text= "Опишите суть задания"/>
                            <TextBox
                                Grid.Row="1"
                                Grid.Column="0"
                                TextWrapping="Wrap"
                                Style="{StaticResource TuskDataTextBoxStyle}"
                                Margin="20 20"
                                MinHeight="100"
                                Width="420"
                                Text="{Binding TuskEssence, Mode=OneWayToSource}"/>
                            <TextBlock
                                Grid.Column="1"
                                Style="{StaticResource SpanDefoult}"
                                FontWeight="DemiBold"
                                FontSize="20"
                                Margin="0 0 20 0"
                                TextAlignment="Justify"
                                TextWrapping="Wrap"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text= "Выберите дату сдачи"/>
                            <Calendar
                                Grid.Column="1"
                                Grid.Row="1"
                                Margin="20"
                                Width="180"
                                Height="180"
                                Style="{StaticResource CalendarThemeStyle}"
                                CalendarButtonStyle="{StaticResource CalendarButtonThemeStyle}"
                                CalendarDayButtonStyle="{StaticResource CalendarDayButtonThemeStyle}"
                                CalendarItemStyle="{StaticResource CalendarItemThemeStyle}"
                                SelectedDate="{Binding SelectedDate}"/>
                        </Grid>
                        <Button Style="{StaticResource PurpleButton}"
                                Grid.Row="0"
                                Content="Подтвердить"
                                Width="200"
                                Height="50"
                                HorizontalAlignment="Right"
                                Margin="10 0 20 0"
                                Command="{Binding MakeUploadNewTuskCommand}"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

        </Grid>
    </Border>
</UserControl>
