<UserControl x:Class="TerificationTeacherApp.View.SelectedTuskDataPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TerificationTeacherApp.View"
             mc:Ignorable="d" 
             d:DesignHeight="520" d:DesignWidth="750">
    <Border
        Height="520"
        Width="750"
        BorderThickness="0"
        Background="#252930"
        CornerRadius="25">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <Button Style="{StaticResource PurpleButton}"
                    Content="Назад"
                    Width="200"
                    Height="50"
                    HorizontalAlignment="Left"
                    Margin="10 0 0 0"
                    Command="{Binding BackTusksForm}"/>
            <Border
                    CornerRadius="0 10 70 0"
                    Grid.Row="1"
                    Padding="1"
                    >
                <Border.Background>
                    <LinearGradientBrush>
                        <GradientStop 
                            Color="#f28a03" Offset="0.0"
                            />
                        <GradientStop 
                            Color="#02fffe" Offset="1"
                            />
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border
                        HorizontalAlignment="Left"
                        Margin="15 0 0 0"
                        Grid.Column="0"
                            CornerRadius="100"
                            Width="90"
                            Height="90"
                            BorderThickness="2"
                            BorderBrush="White"
                            Background="Black">
                        <Image
                            Width="70"
                            Height="70"
                            Source="/Styles/Icons/EmpthyUserIcon50.png"
                                    VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock
                        Style="{StaticResource SpanDefoult}"
                        FontWeight="DemiBold"
                        FontSize="20"
                        Margin="10"
                        TextAlignment="Justify"
                        TextWrapping="Wrap"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Grid.Column="1"
                        Text="{Binding StydentFIO}"/>
                </Grid>
            </Border>
            <Border
                Grid.Row="2"
                Margin="10"
                CornerRadius="25"
                BorderThickness="3"
                BorderBrush="AliceBlue"
                    >
                <ScrollViewer
                    Margin="5">
                    <ScrollViewer.Resources>
                        <Style TargetType="ScrollBar" BasedOn="{StaticResource ScrollBarProjectStyle}"/>
                    </ScrollViewer.Resources>
                    <StackPanel Grid.Column="1">
                        <TextBlock
                        Style="{StaticResource SpanDefoult}"
                        FontWeight="DemiBold"
                        FontSize="30"
                        Margin="10"
                        TextAlignment="Center"
                        TextWrapping="Wrap"
                        HorizontalAlignment="Center"
                        Text="{Binding DisciplineTytle}"/>
                        <TextBlock
                        Style="{StaticResource SpanDefoult}"
                        FontWeight="DemiBold"
                        FontSize="20"
                        Margin="10"
                        TextAlignment="Justify"
                        TextWrapping="Wrap"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Text="{Binding TuskTytle, StringFormat= Имя задания: {0}}"/>
                        <TextBlock
                        Style="{StaticResource SpanDefoult}"
                        FontWeight="DemiBold"
                        FontSize="20"
                        Margin="10"
                        TextAlignment="Justify"
                        TextWrapping="Wrap"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Text="{Binding TuskStatus, StringFormat= Статус задания: {0}}"/>
                        <TextBlock
                        Style="{StaticResource SpanDefoult}"
                        FontWeight="DemiBold"
                        FontSize="20"
                        Margin="10"
                        TextAlignment="Justify"
                        TextWrapping="Wrap"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Text="{Binding AssignmentDate , StringFormat= Запланировання дата сдачи: {0}}"/>
                        <TextBlock
                        Style="{StaticResource SpanDefoult}"
                        FontWeight="DemiBold"
                        FontSize="20"
                        Margin="10"
                        TextAlignment="Justify"
                        TextWrapping="Wrap"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Text= "Суть задания:"/>
                        <TextBox
                            IsReadOnly="True"
                            TextWrapping="Wrap"
                            Style="{StaticResource TuskDataTextBoxStyle}"
                            Margin="20 10"
                            MinHeight="100"
                            Width="650"
                            Text="{Binding TuskEssence, Mode=OneWay}"/>
                        <TextBlock
                        Style="{StaticResource SpanDefoult}"
                        FontWeight="DemiBold"
                        FontSize="20"
                        Margin="10"
                        TextAlignment="Justify"
                        TextWrapping="Wrap"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Grid.Column="1"
                        Text="Примечание к оценке:"/>
                        <TextBox
                            IsReadOnly="True"
                            TextWrapping="Wrap"
                            Style="{StaticResource TuskDataTextBoxStyle}"
                            Margin="20 10"
                            MinHeight="100"
                            Width="650"
                            Text="{Binding GradeFootnote, Mode=OneWay}"/>
                        <Border 
                            HorizontalAlignment="Left"
                            Margin="10" 
                            Width="180" 
                            MinHeight="180" 
                            CornerRadius="5">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2*"/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Border x:Name="InBrd"
                                    Grid.Row="0"
                                        Margin="5 10 5 5"
                                        CornerRadius="5"
                                        Background="{Binding TuskCardColorBackground}"
                                        BorderThickness="6"
                                        BorderBrush= "{Binding TuskCardColorBrush}"
                                        Padding="4"
                                        Width="130"
                                        Height="130">
                                    <Image Width="110"
                                           Height="110"
                                           Source="{Binding TuskCardPicture}"
                                           />
                                </Border>
                                <TextBlock 
                                   TextAlignment="Center"
                                   FontWeight="DemiBold"
                                   Margin="5 0"
                                   TextWrapping="Wrap"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Bottom"
                                   Style="{StaticResource SpanDefoult}"
                                   Grid.Row="1"
                                   Width="auto"
                                   Text="{Binding TuskGradeStr}"
                                   FontSize="16"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>

        </Grid>
    </Border>

</UserControl>
