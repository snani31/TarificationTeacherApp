<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style BasedOn="{StaticResource {x:Type TextBox}}"
           TargetType="TextBox"
           x:Key="InputTextBoxStyle">
        <Style.Setters>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="brd" 
                                CornerRadius="15" 
                                Background="#353340"
                                Width="{TemplateBinding Width}"
                                Height="{TemplateBinding Height}">
                            <Grid>
                                <Rectangle StrokeThickness="1"/>
                                <ScrollViewer 
                                    x:Name="PART_ContentHost" 
                                    Background="Transparent"
                                    BorderThickness="0"
                                    VerticalContentAlignment="Center"
                                    Margin="10,10,0,0"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>


    <Style BasedOn="{StaticResource {x:Type TextBox}}"
           TargetType="TextBox"
           x:Key="TuskDataTextBoxStyle">
        <Style.Setters>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="brd" 
                                CornerRadius="15" 
                                Background="#3c4452"
                                Width="{TemplateBinding Width}"
                                MinHeight="{TemplateBinding Height}">
                            <Grid>
                                <Rectangle StrokeThickness="1"/>
                                <ScrollViewer 
                                    x:Name="PART_ContentHost" 
                                    Background="Transparent"
                                    BorderThickness="0"
                                    VerticalContentAlignment="Center"
                                    Margin="10,10,0,0"
                                    Foreground="#CFCFCF"/>
                                <TextBlock 
                                    MaxWidth="{TemplateBinding Width}"
                                    x:Name="hint"
                                    Text="{TemplateBinding Text}"
                                    TextWrapping="Wrap"
                                    IsHitTestVisible="False"
                                    VerticalAlignment="Top"
                                    HorizontalAlignment="Left"
                                    FontSize="18"
                                    Margin="15,0,0,0"
                                    Foreground="DarkGray"
                                    Visibility="Collapsed"
                                           >
                                </TextBlock>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

    <Style BasedOn="{StaticResource {x:Type PasswordBox}}"
           TargetType="PasswordBox"
           x:Key="InputPasswordBoxStyle">
        <Style.Setters>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border x:Name="brd" 
                                CornerRadius="15" 
                                Background="#3c4452"
                                Width="{TemplateBinding Width}"
                                MinHeight="{TemplateBinding Height}">
                            <Grid>
                                <Rectangle StrokeThickness="1"/>
                                <ScrollViewer 
                                    x:Name="PART_ContentHost" 
                                    Background="Transparent"
                                    BorderThickness="0"
                                    VerticalContentAlignment="Center"
                                    Margin="10,10,0,0"
                                    Foreground="#CFCFCF"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>
</ResourceDictionary>